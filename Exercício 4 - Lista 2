		system("cls");
		
		printf("\nLIGADO!!\n");
		printf("\nLIGADO!!\n");
		printf("\nLIGADO!!\n");
		printf("\nLIGADO!!\n");
		printf("\nLIGADO!!\n");
		
	}
	
system("pause");
